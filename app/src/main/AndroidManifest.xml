<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.sma.liveler">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name="com.sma.liveler.base.Liveler"
            android:allowBackup="true"
            android:icon="@mipmap/ic_app"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_policy"
            android:roundIcon="@mipmap/ic_app_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.sma.liveler.ui.home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sma.liveler.ui.registration.RegisterActivity"></activity>
        <activity android:name="com.sma.liveler.ui.login.LoginActivity">
            <!-- <intent-filter>
                 <action android:name="android.intent.action.MAIN" />

                 <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>-->
        </activity>
    </application>

</manifest>